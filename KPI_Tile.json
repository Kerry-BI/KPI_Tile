{
	"id": "KPI.Tile",
	"version": "1.0.0",
	"name": "KPI Tile",
	"description": "A standard KPI tile with chart",
	"newInstancePrefix": "KPItile",
	"vendor": "Danny Brassil",
	"eula": "",
	"license": "",
	"webcomponents": [
		{
			"kind": "main",
			"tag": "com-sap-sample-kpi-tile",
			"url": "/main2.js",
			"integrity": "",
			"ignoreIntegrity": true
		},
		{
			"kind": "styling",
			"tag": "com-sap-sample-kpi-tile-style",
			"url": "/styling.js",
			"integrity": "",
			"ignoreIntegrity": true
			}
		
	],
	"properties": {
		"color": {
			"type": "string",
			"description": "Background color",
			"default": "white"
		},
		"decimals": {
			"type": "integer",
			"description": "decimal places",
			"default": 0
		},
		"ValueFontSize": {
			"type": "integer",
			"description": "font size of the value text",
			"default": 15
		},
		"LabelFontSize": {
			"type": "integer",
			"description": "font size of the label text",
			"default": 15
		},
		"scaling": {
			"type": "string",
			"description": "Scaling",
			"default": "000"
		},
		"lineOption": {
			"type": "string",
			"description": "Option to make chart line straight or curved",
			"default": "Curve"
		},
		"showxAxis": {
			"type": "string",
			"description": "Option to hide or show x axis",
			"default": "false"
		},
		"showyAxis": {
			"type": "string",
			"description": "Option to hide or show y axis",
			"default": "false"
		},
		"width": {
			"type": "integer",
			"default": 231
		},
		"height": {
			"type": "integer",
			"default": 71
		}
	},
	"methods": {
		"setColor": {
			"description": "Sets the background color.",
			"parameters": [
				{
					"name": "newColor",
					"type": "string",
					"description": "The new background color"
				}
			],
			"body": "this.color = newColor;"
		},
		"getColor": {
			"returnType": "string",
			"description": "Returns the background color.",
			"body": "return this.color;"
		},
		"setDecimal": {
			"description": "Sets the number of decimal places after value.",
			"parameters": [
				{
					"name": "newDecimal",
					"type": "integer",
					"description": "The new scale value"
				}
			],
			"body": "this.decimals = newDecimal;"
		},
		"getDecimal": {
			"returnType": "integer",
			"description": "Returns the value for the decimal places.",
			"body": "return this.decimals;"
		},
		"setValueFontSize": {
			"description": "Sets the font size of the value.",
			"parameters": [
				{
					"name": "newValueFontSize",
					"type": "integer",
					"description": "The new value font size value"
				}
			],
			"body": "this.ValueFontSize = newValueFontSize;"
		},
		"getValueFontSize": {
			"returnType": "integer",
			"description": "Returns the value for the value font size.",
			"body": "return this.ValueFontSize;"
		},
		"setLabelFontSize": {
			"description": "Sets the font size of the Label.",
			"parameters": [
				{
					"name": "newLabelFontSize",
					"type": "integer",
					"description": "The new value font size value"
				}
			],
			"body": "this.LabelFontSize = newLabelFontSize;"
		},
		"getLabelFontSize": {
			"returnType": "integer",
			"description": "Returns the value for the label font size.",
			"body": "return this.LabelFontSize;"
		},
		"setScaling": {
			"description": "Sets the scaling factor.",
			"parameters": [
				{
					"name": "newScaling",
					"type": "string",
					"description": "The new scaling factor"
				}
			],
			"body": "this.scaling = newScaling;"
		},
		"getScaling": {
			"returnType": "string",
			"description": "Returns the scaling factor.",
			"body": "return this.scaling;"
		},
	
	"setlineOption": {
		"description": "Sets the line Option.",
		"parameters": [
			{
				"name": "newlineOption",
				"type": "string",
				"description": "The new line Option"
			}
		],
		"body": "this.lineOption = newlineOption;"
	},
	"getlineOption": {
		"returnType": "string",
		"description": "Returns the line Option.",
		"body": "return this.showxAxis;"
	},

	"setxAxis": {
		"description": "Shows or hides the x axis.",
		"parameters": [
			{
				"name": "newshowxAxis",
				"type": "string",
				"description": "true/false if the the x axis is shown "
			}
		],
		"body": "this.showxAxis = newshowxAxis;"
	},
	"getxAxis": {
		"returnType": "string",
		"description": "Returns the Option that Shows or hides the x axis.",
		"body": "return this.showxAxis;"
	},
	"setyAxis": {
		"description": "Shows or hides the y axis.",
		"parameters": [
			{
				"name": "newshowyAxis",
				"type": "string",
				"description": "true/false if the the y axis is shown "
			}
		],
		"body": "this.showyAxis = newshowyAxis;"
	},
	"getyAxis": {
		"returnType": "string",
		"description": "Returns the Option that Shows or hides the y axis.",
		"body": "return this.showyAxis;"
	}
},
	"events": {
		"onClick": {
			"description": "Called when the user clicks."
		}
	},    
	"dataBindings": {
		"myDataSource": {
		  "feeds": [
			{
			  "id": "dimensions",
			  "description": "Dimensions",
			  "type": "dimension"
			},
			{
			  "id": "measures",
			  "description": "Measures",
			  "type": "mainStructureMember"
			}
		  ]
		}
	  }
}

 